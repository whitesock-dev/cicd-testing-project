{
    "template": "#{{CHANGELOG}}",
    "categories": [
        {
            "title": "## ğŸš€ Features",
            "labels": ["feat", "feature"],
            "exclude_labels": ["chore", "ignore"]
        },
        {
            "title": "## ğŸ› Fixes",
            "labels": ["fix", "bug"],
            "exclude_labels": ["chore", "ignore"]
        },
        {
            "title": "## ğŸ“¦ Other",
            "labels": ["perf", "refactor", "test", "revert"],
            "exclude_labels": ["chore", "ignore"]
        }
    ],
    "ignore_labels": ["chore", "ignore"],
    "label_extractor": [
        {
        "pattern": "^(build|chore|ci|docs|feat|fix|perf|refactor|revert|style|test|release|BREAKING CHANGE)(\\(.*\\))?: .*$",
        "on_property": "title",
        "method": "replace",
        "target": "$1"
        }
    ]
}